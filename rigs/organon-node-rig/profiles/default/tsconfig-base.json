{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../../../../lib",
    "types": [
      "heft-jest"
    ]
  },
  "include": [
    "../../../../../src"
  ],
  "exclude": [
    "../../../../../src/**/__tests__"
  ]
}